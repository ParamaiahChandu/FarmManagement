@model Sapling

@{ 
    ViewBag.Title = "Create Sapling";
}

    <form asp-controller="home" asp-action="create" method="post" class="mt-4">
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Name" class="form-control" placeholder="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="CultivarName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="CultivarName" class="form-control" placeholder="Cultivar Name">
                <span asp-validation-for="CultivarName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="SpeciesName" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="SpeciesName" class="custom-select mr-sm-2"
                        asp-items="Html.GetEnumSelectList<Species>()">
                    <option value="">Please Select</option>
                </select>
                <span asp-validation-for="SpeciesName" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="InitialPrice" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="InitialPrice" class="form-control" placeholder="Initial Price">
                <span asp-validation-for="InitialPrice" class="text-danger"></span>
            </div>
        </div>

        <div asp-validation-summary="All"></div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>